{
    "display_information": {
        "name": "Loopa",
        "description": "Executive Function Layer - Personal AI assistant that surfaces next best actions",
        "background_color": "#2C2D30"
    },
    "features": {
        "bot_user": {
            "display_name": "Loopa",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "user": [
                "channels:history",
                "im:history",
                "groups:history",
                "mpim:history",
                "reactions:read"
            ],
            "bot": [
                "channels:history",
                "im:history",
                "groups:history",
                "mpim:history",
                "channels:read",
                "groups:read",
                "im:read",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://brightlight.unbrandedsoftware.com/api/v1/slack/events",
            "user_events": [
                "message.app_home",
                "message.channels",
                "message.groups",
                "message.im",
                "message.mpim",
                "reaction_added"
            ],
            "bot_events": [
                "message.channels",
                "message.im"
            ]
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}